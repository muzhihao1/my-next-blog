# 生产环境配置模板
# 复制此文件为 .env.production.local 并填入实际值

# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Notion 配置
NOTION_TOKEN=your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# Algolia 搜索配置（可选）
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-search-api-key
ALGOLIA_ADMIN_API_KEY=your-admin-api-key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=posts_production

# 缓存配置
CACHE_TTL=3600000  # 1小时（毫秒）

# 监控配置（可选）
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
MONITORING_ENABLED=true

# 告警通知配置（可选）
SLACK_WEBHOOK_URL=your-slack-webhook-url
PAGERDUTY_API_KEY=your-pagerduty-api-key
ALERT_EMAIL=admin@example.com

# 性能配置
NEXT_PUBLIC_API_TIMEOUT=30000  # API超时时间（毫秒）
NEXT_PUBLIC_MAX_RETRIES=3      # 最大重试次数

# 安全配置
NEXT_PUBLIC_SITE_URL=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_RECOMMENDATION=true

# CDN配置（可选）
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com
NEXT_PUBLIC_IMAGE_DOMAINS=your-domain.com,supabase.co

# 日志级别
LOG_LEVEL=error

# Node.js 配置
NODE_ENV=production