# Notion API Configuration
# Get your integration token from: https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database IDs
# Find these in your Notion database URL after the workspace name
NOTION_DATABASE_ID=your_blog_posts_database_id
NOTION_PROJECTS_DB=your_projects_database_id
NOTION_BOOKS_DB=your_books_database_id
NOTION_TOOLS_DB=your_tools_database_id

# Cache Configuration (optional)
# Time to live for cache in milliseconds (default: 5 minutes)
CACHE_TTL=300000

# ISR Revalidation Secret
# Used to protect the manual revalidation endpoint
REVALIDATE_SECRET=your_secret_key_here

# Environment
NODE_ENV=production

# Site Configuration
# Your production domain (required for OAuth and SEO)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Optional: Error Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Supabase Configuration (必需)
# 获取方式：https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudinary Configuration (图片管理)
# 获取方式：https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Algolia Search Configuration (已实现，可选启用)
# 获取方式：https://www.algolia.com/dashboard
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your_algolia_search_api_key
ALGOLIA_ADMIN_API_KEY=your_algolia_admin_api_key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=posts

# Feature Flags (功能开关)
# 控制各功能模块的启用状态
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_LIKES=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS=true

# Performance Monitoring (可选)
# 启用性能监控和告警
ENABLE_MONITORING=true
SLACK_WEBHOOK_URL=your_slack_webhook_url
ALERT_EMAIL=your_alert_email@example.com

# Admin Panel Protection (生产环境)
# 设置密码以启用 admin 路由，不设置则完全禁用
ADMIN_PASSWORD=your_secure_password_here