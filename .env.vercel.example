# Vercel 环境变量配置示例
# 复制这些变量到 Vercel 项目设置中的 Environment Variables

# ========== 必需配置 ==========
# Notion API - 用于获取博客内容
NOTION_TOKEN=secret_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NOTION_DATABASE_ID=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# ========== 可选配置 ==========
# Supabase - 用于用户认证和数据存储（如果不需要可以不配置）
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.XXXXXXXXXXXX
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.XXXXXXXXXXXX

# Algolia 搜索（如果不需要可以不配置）
NEXT_PUBLIC_ALGOLIA_APP_ID=XXXXXXXXXX
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ALGOLIA_ADMIN_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=posts

# 其他 Notion 数据库（可选）
NOTION_PROJECTS_DB=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
NOTION_BOOKS_DB=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
NOTION_TOOLS_DB=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# 站点配置
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app

# 功能开关（可选）
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_LIKES=true
NEXT_PUBLIC_ENABLE_SEARCH=true